<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>

        <item name="backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsLineText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsLineIcon">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SettingsTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="SettingsLineFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingHorizontal">@dimen/base_padding</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="MainMenuStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/darkBlue</item>
    </style>

    <style name="BackArrow">
        <item name="android:tint">@color/white</item>
    </style>
</resources>
