<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/base_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
    </style>
    
    <style name="ToolBarStyle">
        <item name="navigationIconTint">@color/black</item>
    </style>
    
    <style name="ToolBarTextStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="SettingsLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/darkGray</item>
    </style>

    <style name="MainMenuStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="drawableTint">@color/darkGray</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ClearTextButtonStyle">
        <item name="tint">@color/darkGray</item>
        <item name="android:src">@drawable/x_button</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TrackNameStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="ArtistNameAndTimeStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/min_text_size</item>
    </style>

    <style name="TrackItemArrowStyle">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/next_icon</item>
        <item name="android:tint">@color/darkGray</item>
    </style>
</resources>
