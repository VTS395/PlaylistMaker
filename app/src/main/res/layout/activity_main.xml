<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainMenuStyle"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/base_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/mid_space_buttons_padding"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size"
        android:fontFamily="@font/ys_display_medium"/>

    <Button
        style="@style/MainMenuButton"
        android:id="@+id/searchButton"
        android:layout_marginTop="24dp"
        android:text="@string/title_search"
        app:icon="@drawable/search_icon" />

    <Button
        style="@style/MainMenuButton"
        android:id="@+id/mediaButton"
        android:layout_marginTop="@dimen/mid_space_buttons_padding"
        android:text="@string/title_media"
        app:icon="@drawable/media_icon" />

    <Button
        style="@style/MainMenuButton"
        android:id="@+id/settingsButton"
        android:layout_marginTop="@dimen/mid_space_buttons_padding"
        android:layout_marginBottom="28dp"
        android:text="@string/title_settings"
        app:icon="@drawable/settings_icon" />
</LinearLayout>