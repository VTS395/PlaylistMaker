<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="SettingsStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            style="@style/BackArrow"
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/back_icon"/>

        <TextView
            style="@style/SettingsTitleText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="68dp"
            android:paddingBottom="12dp"
            android:text="@string/title_settings"
            android:textSize="@dimen/base_text_size"
            android:fontFamily="@font/ys_display_medium"/>

    </LinearLayout>

    <FrameLayout
        style="@style/SettingsLineFrame"
        android:layout_marginTop="24dp"
        android:paddingEnd="6dp"
        tools:ignore="RtlSymmetry">

        <TextView
            style="@style/SettingsLineText"
            android:text="@string/title_darkmode"/>

        <Switch
            style="@style/SwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:paddingStart="9dp"
            android:paddingEnd="12dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/shareApp"
        style="@style/SettingsLineFrame"
        tools:ignore="RtlSymmetry">

        <TextView
            style="@style/SettingsLineText"
            android:text="@string/title_shareapp"/>

        <ImageView
            style="@style/SettingsLineIcon"
            android:src="@drawable/share_icon"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/support"
        style="@style/SettingsLineFrame"
        tools:ignore="RtlSymmetry">

        <TextView
            style="@style/SettingsLineText"
            android:text="@string/title_support"/>

        <ImageView
            style="@style/SettingsLineIcon"
            android:src="@drawable/support_icon"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/aggriment"
        style="@style/SettingsLineFrame"
        tools:ignore="RtlSymmetry">

        <TextView
            style="@style/SettingsLineText"

            android:text="@string/title_agreement"/>

        <ImageView
            style="@style/SettingsLineIcon"
            android:src="@drawable/next_icon"
            tools:ignore="ContentDescription" />
    </FrameLayout>
</LinearLayout>