<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackgroundStyleBlackAndWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/backButton"
        app:navigationIcon="@drawable/back_icon"
        app:titleTextAppearance="@style/ToolBarTextStyle"
        app:title="@string/title_settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        style="@style/SettingsLine"
        android:id="@+id/themeSwitcher"
        android:layout_marginTop="24dp"
        android:paddingEnd="18dp"
        android:text="@string/title_darkmode"
        app:trackTint="@color/switch_track_color"
        app:thumbTint="@color/switch_thumb_color"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/shareApp"
        style="@style/SettingsLine"
        android:drawableEnd="@drawable/share_icon"
        android:text="@string/title_shareapp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/support"
        style="@style/SettingsLine"
        android:paddingEnd="14dp"
        android:drawableEnd="@drawable/support_icon"
        android:text="@string/title_support"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/aggriment"
        style="@style/SettingsLine"
        android:paddingEnd="20dp"
        android:drawableEnd="@drawable/next_icon"
        android:text="@string/title_agreement"
        tools:ignore="RtlSymmetry" />

</LinearLayout>